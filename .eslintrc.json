{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "prettier",
    "plugin:perfectionist/recommended-alphabetical",
    "plugin:json/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["perfectionist", "json"],
  "rules": {
    "perfectionist/sort-interfaces": "error",
    "json/*": ["error", "allowComments"]
  }
}
